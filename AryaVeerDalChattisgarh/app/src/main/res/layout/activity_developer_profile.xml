<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer_profile">



    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:id="@+id/dummy_button"
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:src="@drawable/bindesh_yadav"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <TextView android:textSize="25.0sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bindesh Arya" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <TextView

                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:padding="20.0dip"
                android:textSize="20.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have tried my best to create this app user friendly. I hope you enjoy it. If you have a problem or suggestion related to this app then please Send me feedback. All feedbacks and Comments are welcome." />
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/link"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/link"
                android:layout_marginTop="14dp"
                android:text="Connect with us:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/id_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/facbook"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:textColor="#4546a3"
                android:text="Vist our website" />

            <ImageView
                android:id="@+id/link"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text555"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="21dp"
                app:srcCompat="@drawable/link" />


            <ImageView
                android:id="@+id/facbook"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/link"
                android:layout_alignStart="@+id/link"
                android:layout_below="@+id/link"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/google"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/whatsapp"
                android:layout_alignStart="@+id/whatsapp"
                android:layout_below="@+id/whatsapp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/google" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/twitter"
                android:layout_alignStart="@+id/twitter"
                android:layout_below="@+id/twitter"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/telegram" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/facbook"
                android:layout_alignStart="@+id/facbook"
                android:layout_below="@+id/facbook"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/twitter" />

            <TextView
                android:id="@+id/id_facbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/id_link"
                android:layout_alignStart="@+id/id_link"
                android:textColor="#4546a3"
                android:layout_alignTop="@+id/facbook"
                android:text="Like us on Facbook" />

            <TextView
                android:id="@+id/id_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/twitter"
                android:textColor="#4546a3"
                android:layout_alignLeft="@+id/id_facbook"
                android:layout_alignStart="@+id/id_facbook"
                android:text="Follow us on Twitter" />

            <TextView
                android:id="@+id/id_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/whatsapp"
                android:layout_alignLeft="@+id/id_twitter"
                android:layout_alignStart="@+id/id_twitter"
                android:textColor="#4546a3"
                android:text="Contact via Telegram" />

            <TextView
                android:id="@+id/id_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/id_whatsapp"
                android:layout_alignStart="@+id/id_whatsapp"
                android:layout_alignTop="@+id/google"
                android:textColor="#4546a3"
                android:text="Connect us on Google+" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/google"
                android:layout_alignStart="@+id/google"
                android:layout_below="@+id/google"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/instagram" />

            <TextView
                android:id="@+id/id_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/id_whatsapp"
                android:layout_alignRight="@+id/id_whatsapp"
                android:textColor="#4546a3"
                android:layout_alignTop="@+id/imageView6"
                android:text="Follow us on Instagram" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_instagram"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="Copyright Â© 2021" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
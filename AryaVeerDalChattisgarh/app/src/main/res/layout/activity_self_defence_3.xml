<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nyudhamacharya.aatma_raksha_vigyan.Self_defence_3">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="20.0dip">
            <TextView
                android:textSize="20.0sp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/nationalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="दोनों हाथों से एक हाथ पकड़ने पर सुरक्षा-आक्रमण  " />
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="20.0dip">
            <TextView
                android:textSize="20.0sp"
                android:textColor="#ffff"

                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/hearderbelow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="अ ने ब के बांये हाथ को दोनों हाथों से पकड़ा हुआ है।दोनों सामान्य स्थिति में खड़े हुये हैं। " />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card1"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="start"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="1.ब दाहिने पैर को आगे लेकर दाहिनी हथेली से अ की ठोड़ी पर प्रहार करे और दाहिने हाथ से बांये हाथ की मुट्ठी को पकड़ कर ऊपर की ओर झटका देते हुये पकड़ को छुड़ा ले तथा दोनों हाथों की चाप बाहर से भीतर की ओर ग्रीवा पर मारे। "
                    android:layout_centerVertical="true"
                    android:fontFamily="serif" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card2"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_marginTop="15.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="start"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="2.ब अपना दाहिना पैर अ के बांयी ओर बढ़ाकर अपना दाहिना
हाथ अ के दोनों हाथों के मध्य में डालते हुये अ की कोहनी के समीप लेकर घड़ी की विपरीत दिशा में झटका मारते हुये घूम जाये। इससे अ की बांयी कोहनी पर आघात लगने से वह पकड़ को छोड़ देगा। यदि इस स्थिति में भी अ पकड़ को नहीं छोड़े तो ब दाहिने हाथ की चाप अ की ग्रीवा या कनपटी पर दाहिनी ओर मारे या बांया मुष्टि प्रहार करे। "
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="serif" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card3"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_marginTop="15.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="start"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="3.ब अपने दाहिने पैर को पीछे लेते हुये घुटना मोड़े और बांये पैर की साइड किक अ के सामने वाले घुटने पर मारे अथवा दाहिने हाथ का प्रहार उसके बांये हाथ पर करे और दाहिने पैर के किनारे से उसके दाहिने पैर की नली पर प्रहार एक साथ मारे।"
                    android:layout_centerVertical="true"
                    android:fontFamily="serif" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card4"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="start"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="4.अ ने ब का बाँया हाथ कलाई से पकड़ कर अपने दोनों हाथ अपनी छाती से लगा रखे हैं।

सुरक्षा - ब नीचे से अपना दाहिना हाथ उसके दोनों हाथों में डाल कर दोनों हाथों की मुट्ठी बान्ध ले तथा झटके के साथ नीचे बैठ जाये और दोनों हाथों का मुष्टि प्रहार अ के गुप्तांगों पर मारे।"
                    android:layout_centerVertical="true"
                    android:fontFamily="serif" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>